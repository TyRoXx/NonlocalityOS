{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Typed Lambda",
  "scopeName": "source.tl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.tl",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tl",
          "match": "\\b(let|type_of)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.tl",
          "match": "\\b(Int|String)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.tl",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.decimal.tl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.tl",
          "match": "=>"
        },
        {
          "name": "keyword.operator.assignment.tl",
          "match": "=(?!>)"
        },
        {
          "name": "keyword.operator.type-annotation.tl",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.tl",
          "match": ","
        },
        {
          "name": "punctuation.accessor.dot.tl",
          "match": "\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.parameters.tl",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            { "include": "#comments" },
            { "include": "#types" },
            { "include": "#operators" },
            { "include": "#variables" },
            { "include": "#strings" },
            { "include": "#numbers" }
          ]
        },
        {
          "name": "meta.function.body.tl",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "$self" }
          ]
        },
        {
          "name": "meta.array.tl",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.tl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*:)"
        },
        {
          "name": "variable.other.tl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
